<h3>商品編集</h3>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @item, lacal:true do |f| %>
        <h4>画像編集<%= attachment_image_tag @item,:image,:fill,100,100,format: 'jpeg',fallback: "no_image.jpeg" %></h4>
        <h4>商品名<%= f.text_field :name %></h4>
        <h4>商品説明<%= f.text_area :introduction %></h4>
        <h4>ジャンル</h4>
        <h4>税抜価格<%= f.text_field :price %>円</h4>
        <h4>販売ステータス<%= f.select :is_active, Item.is_actives.keys.to_a, {} %></h4>
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
